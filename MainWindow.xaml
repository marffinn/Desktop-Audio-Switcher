<Window x:Class="AudioDeviceSwitcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio Device Switcher" Width="400"
        Height="350" Loaded="Window_Loaded"
        WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize" Background="White" Icon="/sound-card.png">
    <Grid>
        <ListBox x:Name="DeviceListBox"
                 Margin="10"
                 SelectionMode="Single"
                 FontSize="10"
                 SelectionChanged="DeviceListBox_SelectionChanged"
                 VerticalAlignment="Bottom" Background="White">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="LightGreen"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>
